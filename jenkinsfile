pipeline {
    agent any

    stages {
        stage('Maven Build') {
            steps {
                echo 'Building with Maven'
                sh 'mvn clean compile'
            }
        }
        stage('JUnit') {
            steps {
                sh 'mvn test -Dtest=PisteServicesImplTest'
            }
        }
        stage('Sonarqube') {
            steps {
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar'
            }
        }
    }
}
